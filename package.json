{
  "name": "koapi-boilerplate",
  "version": "0.1.0",
  "description": "RESTful API framework based on koajs",
  "main": "build/app.js",
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "ava": {
    "files": [
      "test/**/*.test.js",
      "!test/__lib__/**/*"
    ],
    "source": [
      "**/*.{js,jsx,es}",
      "!build/**/*"
    ],
    "require": [
      "babel-register",
      "babel-polyfill",
      "should",
      "should-http"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "extension": [
      ".jsx",
      ".es"
    ]
  },
  "scripts": {
    "start": "npm run build && node server.js",
    "staging": "NODE_ENV=staging npm start",
    "production": "NODE_ENV=production npm start",
    "build": "babel -d build/ src/",
    "test": "export NODE_ENV=test && npm run db:rollback && npm run db:setup && ava",
    "test:cov": "export NODE_ENV=test && npm run db:rollback && npm run db:setup && nyc ava",
    "test:report": "nyc report --reporter=lcov",
    "cli": "node --harmony cli.js",
    "daemon": "node --harmony daemon.js",
    "dev:server": "NODE_ENV=development nodemon -e js,es,jsx -L server.js",
    "dev:daemon": "NODE_ENV=development nodemon -e js,es,jsx -L daemon.js",
    "dev:apidoc": "gulp apidoc:watch",
    "apidoc": "gulp apidoc",
    "serve:apidoc": "http-server ./docs",
    "serve:coverage": "http-server ./coverage/lcov-report",
    "db:rollback": "knex migrate:rollback",
    "db:setup": "knex migrate:latest && knex seed:run",
    "error.log": "tail -f ./storage/logs/error.log | bunyan",
    "debug.log": "tail -f ./storage/logs/debug.log | bunyan",
    "log": "bunyan",
    "knex": "knex",
    "babel": "babel-node",
    "nyc": "nyc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garbin/koapi-boilerplate.git"
  },
  "keywords": [
    "RESTful",
    "API",
    "Framework",
    "koa"
  ],
  "author": "Garbin Huang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/garbin/koapi-boilerplate/issues"
  },
  "homepage": "https://github.com/garbin/koapi-boilerplate#readme",
  "dependencies": {
    "axios": "^0.13.1",
    "blueimp-md5": "^2.3.0",
    "bull": "^1.0.0-rc1",
    "bull-ui": "^1.2.1",
    "commander": "^2.9.0",
    "config": "^1.20.2",
    "http-server": "^0.9.0",
    "js-base64": "^2.1.9",
    "koa-compose": "^3.1.0",
    "koa-oauth2orize": "^0.1.3",
    "koa-passport": "^2.2.1",
    "koapi": "^0.2.37",
    "lodash": "^4.12.0",
    "moment": "^2.13.0",
    "mysql": "^2.10.2",
    "node-uuid": "^1.4.7",
    "oauth2orize-koa": "^1.3.2",
    "passport-github": "^1.1.0",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "passport-oauth2": "^1.3.0",
    "passport-oauth2-client-password": "^0.1.2",
    "pg": "^6.0.3",
    "throng": "^4.0.0",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "gulp": "^3.9.1",
    "gulp-apidoc": "^0.2.4",
    "istanbul": "^1.0.0-alpha",
    "nock": "^8.0.0",
    "nodemon": "^1.9.2",
    "nyc": "^6.4.4"
  }
}
