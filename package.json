{
  "name": "koapi-boilerplate",
  "version": "0.1.0",
  "description": "RESTful API framework based on koajs",
  "main": "build/app.js",
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "scripts": {
    "start": "NODE_CONFIG_DIR=./build/config npm run build && node build/app.js",
    "build": "babel -d build/ src/",
    "cli":"NODE_CONFIG_DIR=./build/config node build/cli.js",
    "test": "export NODE_ENV=test && npm run db:rollback && npm run db:setup && make test",
    "knex": "knex",
    "test:coverage": "export NODE_ENV=test && npm run db:rollback && npm run db:setup && make test-cover",
    "dev:server": "NODE_CONFIG_DIR=./src/config NODE_ENV=development nodemon -L -x ./node_modules/.bin/babel-node src/app.es",
    "dev:apidoc": "gulp apidoc:watch",
    "dev:cli": "NODE_ENV=development NODE_CONFIG_DIR=./src/config babel-node src/cli.es",
    "serve:apidoc": "make apidoc-server",
    "serve:coverage": "make coverage-server",
    "db:rollback": "knex migrate:rollback",
    "db:setup": "knex migrate:latest && knex seed:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garbin/koapi-boilerplate.git"
  },
  "keywords": [
    "RESTful",
    "API",
    "Framework",
    "koa"
  ],
  "author": "Garbin Huang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/garbin/koapi-boilerplate/issues"
  },
  "homepage": "https://github.com/garbin/koapi-boilerplate#readme",
  "dependencies": {
    "config": "^1.19.0",
    "koapi": "*",
    "moment": "^2.12.0",
    "mysql": "^2.10.2"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "gulp": "^3.9.1",
    "gulp-apidoc": "^0.2.3",
    "istanbul": "^1.0.0-alpha",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.1",
    "should": "^8.2.2",
    "should-http": "0.0.4",
    "supertest": "^1.2.0"
  }
}
