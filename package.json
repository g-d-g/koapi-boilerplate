{
  "name": "koapi-boilerplate",
  "version": "0.1.0",
  "description": "RESTful API framework based on koajs",
  "main": "build/app.js",
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "ava": {
    "files": [
      "test/**/*.test.js",
      "!test/__lib__/**/*"
    ],
    "source": [
      "**/*.{js,jsx,es}",
      "!build/**/*"
    ],
    "require": [
      "babel-register",
      "babel-polyfill",
      "should",
      "should-http"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "extension": [
      ".jsx",
      ".es"
    ]
  },
  "scripts": {
    "start": "npm run build && node server.js",
    "staging": "NODE_ENV=staging npm start",
    "production": "NODE_ENV=production npm start",
    "test": "export NODE_ENV=test && npm run db:rollback && npm run db:setup && ava",
    "test:cov": "export NODE_ENV=test && npm run db:rollback && npm run db:setup && nyc ava",
    "test:report": "nyc report --reporter=lcov",
    "build": "babel -d build/ src/",
    "cli": "node --harmony cli.js",
    "queue": "node --harmony queue.js",
    "queue:ui": "node --harmony queue.js -u",
    "scheduler": "node --harmony scheduler.js",
    "apidoc": "gulp apidoc",
    "dev:server": "NODE_ENV=development nodemon -e js,es,jsx -L server.js",
    "dev:apidoc": "gulp apidoc:watch",
    "serve:apidoc": "http-server ./docs",
    "serve:coverage": "http-server ./coverage/lcov-report",
    "db:rollback": "knex migrate:rollback",
    "db:setup": "knex migrate:latest && knex seed:run",
    "error.log": "tail -f ./storage/logs/error.log | bunyan",
    "debug.log": "tail -f ./storage/logs/debug.log | bunyan",
    "log": "bunyan",
    "knex": "knex",
    "babel": "babel-node",
    "nyc": "nyc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garbin/koapi-boilerplate.git"
  },
  "keywords": [
    "RESTful",
    "API",
    "Framework",
    "koa"
  ],
  "author": "Garbin Huang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/garbin/koapi-boilerplate/issues"
  },
  "homepage": "https://github.com/garbin/koapi-boilerplate#readme",
  "dependencies": {
    "bull": "^1.0.0-rc1",
    "bull-ui": "^1.2.1",
    "commander": "^2.9.0",
    "config": "^1.20.2",
    "cron": "^1.1.0",
    "glob": "^7.0.3",
    "http-server": "^0.9.0",
    "koapi": "^0.2.21",
    "lodash": "^4.12.0",
    "moment": "^2.13.0",
    "mysql": "^2.10.2"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "gulp": "^3.9.1",
    "gulp-apidoc": "^0.2.4",
    "istanbul": "^1.0.0-alpha",
    "ava": "^0.15.1",
    "ava-spec": "^1.0.0",
    "nyc": "^6.4.4",
    "nodemon": "^1.9.2",
    "should": "^8.3.2",
    "should-http": "0.0.4",
    "supertest": "^1.2.0",
    "supertest-as-promised": "^3.1.0"
  }
}
