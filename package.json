{
  "name": "koapi-boilerplate",
  "version": "0.1.0",
  "description": "RESTful API framework based on koajs",
  "main": "build/app.js",
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "scripts": {
    "build": "babel -d build/ src/",
    "dev"  : "NODE_ENV=development nodemon -L -x ./node_modules/.bin/babel-node src/app.es",
    "test-cov": "NODE_ENV=test && npm run db:rollback && npm run db:setup && make test-cov && http-server ./coverage -p 4003",
    "start": "npm run build && node build/app.js",
    "test": "NODE_ENV=test && npm run db:rollback && npm run db::setup && make test",
    "db:rollback":"knex migrate:rollback",
    "db:setup":"knex migrate:latest && knex seed:run",
    "knex": "knex"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garbin/koapi-boilerplate.git"
  },
  "keywords": [
    "RESTful",
    "API",
    "Framework",
    "koa"
  ],
  "author": "Garbin Huang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/garbin/koapi-boilerplate/issues"
  },
  "homepage": "https://github.com/garbin/koapi-boilerplate#readme",
  "dependencies": {
    "koapi": "*",
    "mysql": "^2.10.2"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "istanbul": "^1.0.0-alpha",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.1",
    "should": "^8.2.2",
    "should-http": "0.0.4",
    "supertest": "^1.2.0"
  }
}
